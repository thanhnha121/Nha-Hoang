@model DateTime

@{
    string time;
}

@if (DateTime.Now.Subtract(Model).TotalSeconds <= 10)
{
    time = "Vừa xong";
    <div class="date-new" data-Time="@Model">
        @time
    </div>
}
@if (DateTime.Now.Subtract(Model).TotalSeconds > 10 && DateTime.Now.Subtract(Model).TotalSeconds < 60)
{
    time = (int)DateTime.Now.Subtract(Model).TotalSeconds + " giây trước";
    <div class="date-new" data-Time="@Model">
        @time
    </div>
}
@if (DateTime.Now.Subtract(Model).TotalSeconds >= 60 && DateTime.Now.Subtract(Model).TotalSeconds < 3600)
{
    time = (int)DateTime.Now.Subtract(Model).TotalSeconds / 60 + " phút trước";
    <div class="date-new" data-Time="@Model">
        @time
    </div>
}
@if (DateTime.Now.Subtract(Model).TotalSeconds >= 3600 && DateTime.Now.Subtract(Model).TotalSeconds < 3600 * 24)
{
    time = (int)DateTime.Now.Subtract(Model).TotalSeconds / 60 / 60 + " giờ trước";
    <div class="date-old" data-Time="@Model">
        @time
    </div>
}
@if (DateTime.Now.Subtract(Model).TotalSeconds >= 3600 * 24)
{
    time = (int)DateTime.Now.Subtract(Model).TotalSeconds / 60 / 60 / 24 + " ngày trước";
    <div class="date-old" data-Time="@Model">
        @time
    </div>
}
