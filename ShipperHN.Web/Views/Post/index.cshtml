@using ShipperHN.Business.Entities
@{
    List<Post> posts = (List<Post>)ViewData["posts"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ShipperHN</title>
    <link rel="icon" type="image/png" href="~/Content/images/shipperhn.png" />
    <meta name="keywords" content="ship,shipper" />
    <meta name="description" content="ShipperHn. Mang đơn ship đến chân giường shipper!" />
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/loading-effect.css" type="text/css" />
</head>
<body onload="onload()">
    <div class="wrap">
        <header>
            <div class="logo"><a href=@Url.Action("Index", "Post")><img src="~/Content/images/logo.png" alt="L O G O" /></a></div>
            <div class="options">
                <ul>
                    <li><img src="~/Content/images/options-search-not-active.png"></li>
                    <li><img src="~/Content/images/options-menu-not-active.png"></li>
                </ul>
            </div>
            <div id="nearby">
                <img src="~/Content/images/location-active.gif">
            </div>
            <div class="clear"></div>
            <div class="search-box">
                <input id="txt-search" type="text" placeholder=@("#số_điện_thoại/@tên_người_dùng")>
                <a onclick="Search()">S E A R C H</a>
                <div class="clear"></div>
            </div>
            <nav class="vertical menu">
                <ul>
                    <li><a onclick="LoginWithFacebook()">Login With Facebook</a></li>
                    <li><a href="https://www.facebook.com/Shipperhn-177225342709065/">Facebook Page</a></li>
                    <li><a id="hide-location-bar" onclick="HideLocationBar()">Hide Location Bar</a></li>
                    <li><a id="hide-nearby" onclick="HideNearBy()">Turn On Near By Feature</a></li>
                </ul>
            </nav>
        </header>

        <div class="content">
            <div id="location-nav">
                @Html.Partial("~/Views/_LocationNav.cshtml", new Post().GetLocations())
            </div>

            <div id="get-new-posts">
            </div>

            <div id="post-list">
                @Html.Partial("~/Views/_PostList.cshtml", posts)
            </div>

            <div id="get-more-posts">
            </div>

            <div id="bottom-loading" style="display: none">
                @Html.Partial("~/Views/Shared/_Loading.cshtml")
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/_Data.cshtml", posts)

    <div class="modal">
        <div id="post-preview">
        </div>

        <div id="post-preview-close" onclick="ClosePostPreview()">
            <a>C L O S E</a>
        </div>
    </div>

    <div id="btn-back-to-top">
        <input type="button" value="T O P" onclick="BackToTop()" />
    </div>

    <div id="search-result">
    </div>

    <div id="alert">
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/home.js"></script>

</body>
</html>
