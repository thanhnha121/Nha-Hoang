@using System.Web.Optimization
@using ShipperHN.Business.Entities
@{
    List<Post> posts = (List<Post>) ViewData["posts"];
    string location = (string)ViewData["location"];
}

<!DOCTYPE html>
<html lang="vi">
<head>

  <meta charset="utf-8" />
  <title>ShipperHN</title>
  <link rel="icon" type="image/png" href="/Content/images/new-logo.png" />
  <meta name="keywords" content="ship, shipper, shipperhn, ship hàng, tìm ship, ship nhanh" />
  <meta name="description" content="ShipperHN - Tìm Ship nhanh nhất - Nhận Ship nhanh nhất!" />
  @Styles.Render("/bundles/css")

  <!-- Open Graph data -->
  <meta property="og:title" content="ShipperHN" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="http://shipperhn.com/" />
  <meta property="og:image" content="http://shipperhn.com//Content/images/thumb.png" />
  <meta property="og:description" content="ShipperHN - Tìm Ship nhanh nhất - Nhận Ship nhanh nhất!" />

</head>
<body onload="onload()">
  <div class="wrap">
    <div id="alert"></div>

    <header>
      <div class="logo">
        <a href="/">
          <img src="/Content/images/logo.png" alt="L O G O" />
        </a>
      </div>
      <div class="options">
        <ul>
          <li><img src="/Content/images/options-search-not-active.png"></li>
          <li><img src="/Content/images/options-menu-not-active.png"></li>
        </ul>
      </div>
      <div id="nearby">
        <img src="/Content/images/location-active.gif">
      </div>
      <div class="clear"></div>
      <div class="search-box">
        <input id="txt-search" type="text" placeholder=@("#số_điện_thoại/@tên_người_dùng") maxlength="30">
        <a onclick="Search()">S E A R C H</a>
        <div class="clear"></div>
        <div id="search-result"></div>
      </div>
      <nav class="vertical menu">
        <ul>
          <li><a onclick="LoginWithFacebook()">Login With Facebook</a></li>
          <li><a href="https://www.facebook.com/Shipperhn-177225342709065/">Facebook Page</a></li>
          <li><a id="hide-location-bar" onclick="HideLocationBar()">Hide Location Bar</a></li>
          <li><a id="hide-nearby" onclick="HideNearBy()">Turn On Near By Feature</a></li>
        </ul>
      </nav>
    </header>

    <div class="content">

      <div id="location-nav">
        @Html.Partial("/Views/_LocationNav.cshtml", new Post().GetLocations())
      </div>

      <div id="top-loading" style="display: none;">
        @Html.Partial("/Views/Shared/_Loading.cshtml")
      </div>

      <div id="post-list">
        @Html.Partial("/Views/_PostList.cshtml", posts)
      </div>

      <div id="bottom-loading" style="display: none;">
        @Html.Partial("/Views/Shared/_Loading.cshtml")
      </div>

    </div>
  </div>

  <div id="btn-back-to-top">
    <input type="button" value="T O P" onclick="BackToTop()" />
  </div>

  <div id="location-div" data-location="@location"></div>

  @Scripts.Render("/bundles/js")

</body>
</html>
